<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      styleClass="pane-with-border" spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
    <Label fx:id="infoLabel" styleClass="cell_big_label" wrapText="true"/>
    <TextArea fx:id="infoTextArea" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-size: 12px;" wrapText="true" promptText="Enter client information here..."/>
    <Button fx:id="saveButton" text="Save and Return" onAction="#handleSave" maxWidth="Infinity" styleClass="cell_big_label"/>
</VBox>
